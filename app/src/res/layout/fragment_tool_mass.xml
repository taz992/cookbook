<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/categories_main_layout">

    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="match_parent">

        <ImageView
            android:id="@+id/massImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/mass"/>
        <EditText
            android:id="@+id/massNum1"
            android:layout_width="200dp" android:layout_height="wrap_content"
            android:layout_below="@id/massImageView"
            android:layout_marginBottom="15dp" android:layout_marginEnd="15dp"
            android:layout_marginStart="30dp" android:layout_marginTop="15dp"
            android:ems="10" android:gravity="end" android:textAlignment="textEnd"
            android:imeOptions="actionDone" android:text="0"
            android:inputType="numberDecimal" android:selectAllOnFocus="true"/>
        <Spinner
            android:id="@+id/massList1"
            android:layout_width="wrap_content" android:layout_height="50dp"
            android:layout_alignBottom="@+id/massNum1"
            android:layout_toEndOf="@+id/massNum1" android:layout_toRightOf="@+id/massNum1"
            android:entries="@array/mass_units"/>
        <EditText
            android:id="@+id/massNum2"
            android:layout_width="200dp" android:layout_height="wrap_content"
            android:layout_below="@id/massNum1"
            android:layout_marginBottom="15dp" android:layout_marginEnd="15dp"
            android:layout_marginStart="30dp" android:layout_marginTop="15dp"
            android:editable="false" android:textIsSelectable="true"
            android:ems="10" android:gravity="end" android:text="0"
            android:textAlignment="textEnd" />
        <Spinner
            android:id="@+id/massList2"
            android:layout_width="wrap_content" android:layout_height="50dp"
            android:layout_alignBottom="@+id/massNum2"
            android:layout_toEndOf="@+id/massNum2" android:layout_toRightOf="@+id/massNum2"
            android:entries="@array/mass_units"/>
    </RelativeLayout>


</FrameLayout>